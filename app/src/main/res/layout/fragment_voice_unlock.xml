<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_add_view_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24dp"
        android:text="@string/voice_lock"
        android:textColor="#000000"
        android:textSize="@dimen/size_22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/imBackgroundVoiceLock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20dp"
            android:textColor="#000000"
            android:textSize="@dimen/size_40sp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/size_16dp"
            android:textSize="@dimen/size_24" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imBackgroundVoiceLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_180dp"
        android:contentDescription="@string/hello_world"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <ImageView
        android:id="@+id/imVLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/hello_world"
        android:scaleType="fitXY"
        android:src="@drawable/icon_voice_win"
        app:layout_constraintBottom_toBottomOf="@id/imBackgroundVoiceLock"
        app:layout_constraintEnd_toEndOf="@id/imBackgroundVoiceLock"
        app:layout_constraintStart_toStartOf="@id/imBackgroundVoiceLock"
        app:layout_constraintTop_toTopOf="@id/imBackgroundVoiceLock" />

    <TextView
        android:id="@+id/tvSpeakLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24dp"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/size_16dp"
        android:lineSpacingExtra="@dimen/size_3dp"
        android:text="@string/speak_password_to_unlock"
        android:textColor="#000000"
        android:textSize="@dimen/size_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imBackgroundVoiceLock" />

    <TextView
        android:id="@+id/tvForgetLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15dp"
        android:text="@string/forget_password"
        android:textColor="#000000"
        android:textSize="@dimen/size_16_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSpeakLock" />


    <ImageView
        android:id="@+id/view1WinLock"
        android:layout_width="@dimen/size_66dp"
        android:layout_height="@dimen/size_66dp"
        android:background="@drawable/round_image_window"
        android:contentDescription="@string/hello_world"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/view2WinLock"
        app:layout_constraintTop_toBottomOf="@id/tvForgetLock" />

    <ImageView
        android:id="@+id/view2WinLock"
        android:layout_width="@dimen/size_66dp"
        android:layout_height="@dimen/size_66dp"
        android:background="@drawable/round_image_window"
        android:contentDescription="@string/hello_world"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@+id/view1WinLock"
        app:layout_constraintRight_toLeftOf="@+id/view3WinLock"
        app:layout_constraintTop_toTopOf="@id/view1WinLock"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/view3WinLock"
        android:layout_width="@dimen/size_66dp"
        android:layout_height="@dimen/size_66dp"
        android:background="@drawable/round_image_window"
        android:contentDescription="@string/hello_world"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@+id/view2WinLock"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view1WinLock"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/number_key"
        android:contentDescription="@string/hello_world"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/view1WinLock"
        app:layout_constraintEnd_toEndOf="@id/view1WinLock"
        app:layout_constraintStart_toStartOf="@id/view1WinLock"
        app:layout_constraintTop_toTopOf="@id/view1WinLock" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_union"
        android:contentDescription="@string/hello_world"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/view2WinLock"
        app:layout_constraintEnd_toEndOf="@id/view2WinLock"
        app:layout_constraintStart_toStartOf="@id/view2WinLock"
        app:layout_constraintTop_toTopOf="@id/view2WinLock" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_recent"
        android:contentDescription="@string/hello_world"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/view3WinLock"
        app:layout_constraintEnd_toEndOf="@id/view3WinLock"
        app:layout_constraintStart_toStartOf="@id/view3WinLock"
        app:layout_constraintTop_toTopOf="@id/view2WinLock" />
</androidx.constraintlayout.widget.ConstraintLayout>