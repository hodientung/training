<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rvContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_10"
    android:elevation="@dimen/size_3dp"
    android:padding="8dp"
    app:cardBackgroundColor="@color/E3F2FD"
    app:cardCornerRadius="@dimen/size_16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100dp"
        android:padding="@dimen/size_8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/thumbnailCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:elevation="3dp"
            app:cardCornerRadius="@dimen/size_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3">

            <ImageView
                android:id="@+id/imThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|end"
                android:contentDescription="@string/hello_world"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/videoDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/standard_font_sf_pro_regular"
                android:background="@color/light_dark"
                android:padding="4dp"
                android:textColor="@android:color/white"
                android:textSize="12sp"

                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/thumbnailCard"
            app:layout_constraintEnd_toStartOf="@id/set3"
            app:layout_constraintStart_toEndOf="@+id/thumbnailCard"
            app:layout_constraintTop_toTopOf="@+id/thumbnailCard">

            <TextView
                android:id="@+id/tvVideoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/standard_font_sf_pro_regular"
                android:maxLines="1"
                android:textColor="#353535"
                android:textSize="@dimen/size_16_sp"
                />

            <TextView
                android:id="@+id/tvVideoSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/standard_font_sf_pro_regular"
                android:maxLines="1"
                android:textColor="@color/color_828282"
                android:textSize="@dimen/size_11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/set3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_click_view"
            android:gravity="center"
            android:maxLines="2"
            android:paddingVertical="@dimen/size_6dp"
            android:paddingHorizontal="@dimen/size_18dp"
            android:fontFamily="@font/standard_font_sf_pro_regular"
            android:ellipsize="end"
            android:text="@string/click_view"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/size_11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>