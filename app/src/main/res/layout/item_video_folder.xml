<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ctItemVideoFolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_10"
    android:elevation="@dimen/size_3dp"
    android:padding="@dimen/size_8dp"
    app:cardBackgroundColor="#F4F2F4"
    app:cardCornerRadius="@dimen/size_16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100dp"
        android:paddingTop="@dimen/size_8dp"
        android:paddingBottom="@dimen/size_8dp"
        android:paddingEnd="@dimen/size_10"
        android:paddingStart="@dimen/size_8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvItemVideo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:elevation="3dp"
            app:cardCornerRadius="@dimen/size_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3">

            <ImageView
                android:id="@+id/imVideoFolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/hello_world"
                android:scaleType="fitXY"
                android:src="@drawable/t1"
                app:layout_constraintWidth_percent="0.3" />
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_20dp"
            app:layout_constraintBottom_toBottomOf="@id/cvItemVideo"
            app:layout_constraintEnd_toStartOf="@id/set2"
            app:layout_constraintStart_toEndOf="@id/cvItemVideo"
            app:layout_constraintTop_toTopOf="@id/cvItemVideo">

            <TextView
                android:id="@+id/tvFolderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#353535"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFolderPath"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/size_11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFolderName" />

            <TextView
                android:id="@+id/tvVideoNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#353535"
                android:textSize="@dimen/size_16_sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFolderPath" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/set2"
            android:layout_width="@dimen/size_62dp"
            android:layout_height="@dimen/size_25dp"
            android:text="@string/click_view"
            android:gravity="center"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/size_11sp"
            android:background="@drawable/round_click_view"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>