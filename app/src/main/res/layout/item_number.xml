<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/size_35dp">

    <ImageView
        android:id="@+id/btnNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_pin_set"
        android:contentDescription="@string/hello_world"
        android:scaleType="fitXY"
        android:text="@string/_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_1"
        android:textColor="#000000"
        android:textSize="@dimen/size_20sp"
        app:layout_constraintBottom_toBottomOf="@id/btnNumber"
        app:layout_constraintEnd_toEndOf="@+id/btnNumber"
        app:layout_constraintStart_toStartOf="@+id/btnNumber"
        app:layout_constraintTop_toTopOf="@id/btnNumber" />
</androidx.constraintlayout.widget.ConstraintLayout>