<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="@dimen/size_16dp"
    android:paddingStart="@dimen/size_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.OnBoarding2Fragment">

    <TextView
        android:id="@+id/tvTitleVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_11dp"
        android:gravity="top"
        android:lineSpacingExtra="10sp"
        android:text="@string/voice_nlock_screen"
        android:textColor="#4F4F4F"
        android:textSize="@dimen/size_20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/imVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/hello_world"
        android:src="@drawable/bachground_voice"
        app:layout_constraintTop_toBottomOf="@id/tvTitleVoice"
        android:layout_marginTop="@dimen/size_33dp"
        />

    <ImageView
        android:id="@+id/imNext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/hello_world"
        app:layout_constraintTop_toBottomOf="@id/imVoice"
        android:src="@drawable/next_button"
        android:layout_marginTop="@dimen/size_46_97"
        />

</androidx.constraintlayout.widget.ConstraintLayout>