<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_rate_us"
    tools:context=".view.RateUsFragment">
<ImageView
    android:id="@+id/imStar"
    android:layout_width="@dimen/size_100dp"
    android:layout_height="@dimen/size_100dp"
    android:scaleType="fitXY"
    app:layout_constraintTop_toTopOf="parent"
    android:contentDescription="@string/hello_world"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:src="@drawable/star_rate"
    android:layout_marginTop="@dimen/size_10"
    />
    <TextView
        android:id="@+id/tvTitleRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your Option Matter To Us"
        android:textSize="@dimen/size_20sp"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/size_16dp"
        app:layout_constraintTop_toBottomOf="@id/imStar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/standard_font_sf_pro_regular"
        android:textColor="@color/orange"
        android:layout_marginTop="@dimen/size_20dp"
        />
    <TextView
        android:id="@+id/tvDescriptionRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="If you enjoy this app, would you\n mind rating us on the google play "
        android:textSize="@dimen/size_14_sp"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/size_20dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleRate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/standard_font_sf_pro_regular"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/size_10"
        />
    <RatingBar
        android:id="@+id/rateBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="1"
        android:numStars="5"
        android:theme="@style/RatingBar"
        android:layout_marginTop="@dimen/size_10"
        app:layout_constraintTop_toBottomOf="@id/tvDescriptionRate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvThankYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate us"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/size_10"
        android:fontFamily="@font/standard_font_sf_pro_regular"
        android:background="@drawable/round_gradient_button"
        app:layout_constraintTop_toBottomOf="@id/rateBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/size_10"
        />

</androidx.constraintlayout.widget.ConstraintLayout>