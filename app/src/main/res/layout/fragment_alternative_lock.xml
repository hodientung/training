<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".view.AlternativeLockFragment">

    <Button
        android:id="@+id/btnPinLockAlternative"
        android:layout_width="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/size_50dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/pin_lock" />

    <Button
        android:id="@+id/btnPatternLockAlternative"
        android:layout_width="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPinLockAlternative"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/pattern_lock" />
    </androidx.constraintlayout.widget.ConstraintLayout>