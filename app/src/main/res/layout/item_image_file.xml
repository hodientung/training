<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ctItemImageFile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_10"
    android:elevation="@dimen/size_3dp"
    android:padding="@dimen/size_8dp"
    app:cardBackgroundColor="#F4F2F4"
    app:cardCornerRadius="@dimen/size_20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_120dp"
        android:padding="@dimen/size_8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvItemFile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:elevation="3dp"
            app:cardCornerRadius="@dimen/size_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5">

            <ImageView
                android:id="@+id/imImageFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/hello_world"
                android:scaleType="fitXY"
                android:src="@drawable/t1"
                app:layout_constraintWidth_percent="0.3" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/cvItemFile"
            app:layout_constraintStart_toEndOf="@id/cvItemFile"
            app:layout_constraintTop_toTopOf="@id/cvItemFile">

            <TextView
                android:id="@+id/tvFileImageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/kinemaster"
                android:textSize="@dimen/size_16_sp" />

            <TextView
                android:id="@+id/tvImagePath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@string/starage_emulate_0"
                android:textSize="@dimen/size_12sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>