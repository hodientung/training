<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.VoiceLockFragment">

    <TextView
        android:id="@+id/tvVoiceLockScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24dp"
        android:textStyle="bold"
        android:lineSpacingExtra="@dimen/size_3dp"
        android:layout_marginHorizontal="@dimen/size_16dp"
        android:text="@string/voice_lock_screen"
        android:textColor="#000000"
        android:textSize="@dimen/size_22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_29dp"
        android:background="@drawable/round_enable_service"
        app:cardCornerRadius="@dimen/size_16dp"
        app:layout_constraintTop_toBottomOf="@id/tvVoiceLockScreen">

        <TextView
            android:id="@+id/tvLockScreenStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_16dp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/size_5dp"
            android:text="@string/lock_screen_status"
            android:textColor="#353535"
            android:textSize="@dimen/size_17sp"
            app:layout_constraintBottom_toTopOf="@id/tvEnableLockService"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEnableLockService"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/size_16dp"
            android:text="@string/enable_lock_service"
            android:textColor="#AFAFAF"
            android:textSize="@dimen/size_13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvLockScreenStatus" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchMaterial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_8dp"
            app:layout_constraintBottom_toBottomOf="@id/tvLockScreenStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvLockScreenStatus" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFunction"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_0dp"
        android:layout_marginTop="@dimen/size_24dp"
        android:padding="@dimen/size_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView" />
</androidx.constraintlayout.widget.ConstraintLayout>
