<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_502A5E"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.VoiceLockFragment">

    <Button
        android:id="@+id/btnVoiceLock"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/voice_lock" />

    <Button
        android:id="@+id/btnPinLock"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnVoiceLock"
        android:layout_centerInParent="true"
        android:text="@string/change_pin_lock" />

    <Button
        android:id="@+id/btnPatternLock"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPinLock"
        android:layout_centerInParent="true"
        android:text="@string/pattern_lock" />

    <Button
        android:id="@+id/btnTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPatternLock"
        android:layout_centerInParent="true"
        android:text="@string/theme" />

    <Button
        android:id="@+id/btnVideoGallery"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnTheme"
        android:layout_centerInParent="true"
        android:text="@string/video_gallery" />

    <Button
        android:id="@+id/btnImageGallery"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnVideoGallery"
        android:layout_centerInParent="true"
        android:text="@string/image_gallery" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnStartService"
            style="?android:attr/selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/turn_on_service" />

        <Button
            android:id="@+id/btnStopService"
            style="?android:attr/selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="0.5"
            android:text="@string/turn_off_service" />
    </LinearLayout>

</RelativeLayout>