<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    tools:context=".view.VideoFolderFragment">

   <TextView
       android:id="@+id/tvNameVideo1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/size_24dp"
       android:text="@string/video_gallery"
       android:textStyle="bold"
       android:textColor="#000000"
       android:fontFamily="@font/standard_font_sf_pro_regular"
       android:textSize="@dimen/size_20sp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <ImageView
       android:id="@+id/tvBackImage1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="@dimen/size_10"
       android:contentDescription="@string/hello_world"
       android:scaleType="fitXY"
       android:src="@drawable/ic_round_arrow_back_24"
       app:layout_constraintBottom_toBottomOf="@id/tvNameVideo1"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@id/tvNameVideo1" />

   <androidx.appcompat.widget.SearchView
       android:id="@+id/search_view"
       android:layout_width="0dp"
       android:layout_height="@dimen/size_35dp"
       android:background="@drawable/round_video_file"
       android:layout_marginHorizontal="@dimen/size_10"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/tvNameVideo1"
       android:layout_marginTop="@dimen/size_12dp"
       app:queryHint="Search here"
       android:textCursorDrawable="@null"
       app:iconifiedByDefault="false"
       app:queryBackground="@null" />
   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/rvVideoFolder"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_marginTop="@dimen/size_12dp"
       app:layout_constraintTop_toBottomOf="@+id/search_view"
       app:layout_constraintBottom_toBottomOf="parent"
       />

</androidx.constraintlayout.widget.ConstraintLayout>