<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    tools:context=".view.VideoFolderFragment">

   <TextView
       android:id="@+id/tvNameVideo1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/size_10"
       android:text="@string/video_gallery"
       android:textColor="#000000"
       android:textSize="@dimen/size_20sp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <ImageView
       android:id="@+id/tvBackImage1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="@dimen/size_10"
       android:contentDescription="@string/hello_world"
       android:scaleType="fitXY"
       android:src="@drawable/ic_round_arrow_back_24"
       app:layout_constraintBottom_toBottomOf="@id/tvNameVideo1"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@id/tvNameVideo1" />

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/rvVideoFolder"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_marginTop="@dimen/size_20dp"
       app:layout_constraintTop_toBottomOf="@+id/tvNameVideo1"
       app:layout_constraintBottom_toBottomOf="parent"
       />

</androidx.constraintlayout.widget.ConstraintLayout>